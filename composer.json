{
    "name": "irfan116/twigrcrow",
    "description": "Adds the power of Twig to Laravel",
    "keywords": ["laravel", "twig"],
    "license": "MIT",
    "authors": [
        {
            "name": "Irfan Khattak",
            "email": "hello@irfan.com"
        },
        {
            "name": "Irfan",
            "email": "irfan@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "twig/twig": "~1.30",
        "illuminate/support": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*",
        "illuminate/view": "5.0.*|5.1.*|5.2.*|5.3.*|5.4.*|5.5.*"
    },
    "require-dev": {
        "laravel/framework": "5.0.*",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.5",
        "satooshi/php-coveralls": "~0.6"
    },
    "suggest": {
        "twig/extensions": "~1.0",
        "laravelcollective/html": "For bringing back html/form in Laravel 5.x"
    },
    "autoload": {
        "psr-4": {
            "twigrcrow\\": "src",
            "twigrcrow\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.10-dev"
        }
    },
    "minimum-stability": "dev"
}
